<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.guswn_000.a170511inclass.MainActivity">

    <Button
        android:onClick="onClick"
        android:id="@+id/btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내부 메모리에 읽기" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내부 메모리에 쓰기" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RAW폴더에서 파일 읽기" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="외부 메모리에 읽기" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="외부 메모리에 쓰기" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="디렉터리 생성" />

    <Button
        android:onClick="onClick"
        android:id="@+id/btn7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="디렉터리 파일목록" />

    <EditText
        android:id="@+id/et"
        android:hint="파일명이요"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
